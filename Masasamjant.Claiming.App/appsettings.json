{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Masasamjant": {
    /* Claiming configuration */
    "Claiming": {
      "RequireHttps": "False",        /* Do not require using HTTPS */
      "Manager": {                    /* Claim manager configuration */
        "Type": "EntityClaimManager", /* What type of built-in claim manager is used. [MemoryClaimManager, HttpClaimManager, EntityClaimManager] */
        "ClaimLifeTime": 30,          /* Claim lifetime in minutes. In this case after 30 minutes, claim is considered to be expired. */
        "Instance": "Singleton"       /* What kind of claim manager instance is used. [Singleton, Transient] */
      },
      /* Configuration specific to entity claim manager */
      "ConnectionString": "Server=localhost\\SQLExpress;Database=ClaimingApp;Trusted_Connection=True;TrustServerCertificate=true;Integrated Security=SSPI;",  /* Database connection string */
      "CommandTimeout": 30,                                                                                                                                   /* Command time out */
      /* Schema of table to store claims. These are actually the default values. */
      "Schema": {     
        "SchemaName": "Claims",
        "TableName": "EntityClaim",
        "OwnerIdentifierMaxLength": 128,
        "TypeNameMaxLength": 256,
        "InstanceIdentifierMaxLength": 256,
        "UniqueClaimSHA1MaxLength": 256,
        "UniqueClaimSHA1Index": "UIX_EntityClaim_ClaimKey" /* Name of "unique claim index" that covers owner, type and instance identifier sha */
      }
    }
  },
  "AllowedHosts": "*"
}
