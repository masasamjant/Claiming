@model UsersViewModel
@{
    ViewData["Title"] = "Users";
}

<div class="text-center">
    <h1 class="display-4">Users</h1>
    <a asp-area="" asp-action="Add" asp-controller="User">Add</a>
    <table>
        <thead>
            <tr>
                <th>User name</th>
                <th>First name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@Html.ActionLink(user.UserName, "Details", "User", new { name = user.UserName })</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                </tr>
            }
        </tbody>
    </table>
</div>