<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Claming Demo App</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header style="text-align:center; font-size:20px;">
        <nav>
            <span><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></span>
            <span><a asp-area="" asp-controller="User" asp-action="Index">Users</a></span>
            <span><a asp-area="" asp-controller="Product" asp-action="Index">Products</a></span>
            <span><a asp-area="" asp-controller="Home" asp-action="Login">Login</a></span>
        </nav>
    </header>
    <div class="container" style="text-align:center;margin-left:20%; margin-right:20%;">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container" style="text-align:center;margin-left:20%; margin-right:20%;">
            &copy; @DateTime.Today.Year - Claiming Demo App
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
