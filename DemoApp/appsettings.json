{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Masasamjant": {
    /* Claiming configuration */
    "Claiming": {
      "Manager": {                                      /* Claim manager configuration */
        "Type": "HttpClaimManager",                     /* What type of built-in claim manager is used. [MemoryClaimManager, HttpClaimManager, EntityClaimManager] */
        "ClaimLifeTime": 30,                            /* Claim lifetime in minutes. In this case after 30 minutes, claim is considered to be expired. */
        "Instance": "Singleton"                         /* What kind of claim manager instance is used. [Singleton, Transient] */
      },

      /* Configuration specific to HttpClaimManager */
      "ClientPurpose": "Claims",                        /* Search HTTP base address by this key. */
      "Api": {
        "Header": "X-CLAIMS-KEY",                       /* Name of API key HTTP header. */
        "Key": "69D5A8A9-7DEA-4E48-8DF1-59A2A0701CCC",  /* Value of API key. Future development should hide from configuration */
        "Checksum": "X-CLAIMS-CHECK"                    /* Name of checksum HTTP header. */
      }
    },

    /* HTTP base address provider configuration */
    "Claims": {
      "HttpBaseAddress": "https://localhost:7251/"      /* This supposed to be Claiming.App or other HTTP API that store claims. */
    }
  }
}
